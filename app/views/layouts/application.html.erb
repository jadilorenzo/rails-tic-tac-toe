  <body class='bg-gray-100'>
    <div class='p-4 text-xl bg-blue-500 shadow-md font-bold text-white mb-8'>Tic-Tac-Toe <div class='float-right'><%= yield :header %></div></div>
    <div class='m-auto w-2/3 bg-white p-4 rounded shadow'>
      <%= yield %>
    </div>
  </body>
</html>
